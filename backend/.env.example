# ============================================
# 数据库配置
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/vocab_db"

# ============================================
# JWT配置
# ============================================
JWT_SECRET="your_secret_key_here_change_in_production"
JWT_EXPIRES_IN="24h"

# ============================================
# 服务器配置
# ============================================
PORT=3000
NODE_ENV="development"

# ============================================
# CORS配置
# ============================================
CORS_ORIGIN="http://localhost:5173"

# ============================================
# 反向代理配置
# ============================================
# 仅在受控反代后面时启用，设为代理层数(如1)或false禁用
# 注意：错误配置会导致攻击者伪造IP绕过限流
TRUST_PROXY="false"

# ============================================
# Worker配置（多实例部署）
# ============================================
# 是否为主节点，仅主节点运行cron任务
# 多实例部署时，仅一个实例设为true
WORKER_LEADER="false"

# ============================================
# AMAS算法配置
# ============================================
# 延迟奖励默认延迟时间（毫秒），最小60000（60秒）
DELAYED_REWARD_DELAY_MS=86400000

# ============================================
# 速率限制配置
# ============================================
# 每个窗口期内的最大请求数
RATE_LIMIT_MAX=100
# 窗口期时长（毫秒）
RATE_LIMIT_WINDOW_MS=60000

# ============================================
# 日志配置
# ============================================
# 日志级别: debug, info, warn, error
LOG_LEVEL="info"

# ============================================
# 监控配置（可选）
# ============================================
# 健康检查端点
HEALTHCHECK_ENDPOINT="/health"
# 指标端点（如果启用）
# METRICS_ENDPOINT="/metrics"

# ============================================
# 安全注意事项
# ============================================
# 生产环境必须更换 JWT_SECRET 为随机强密钥
# 生产环境必须使用强数据库密码
# 不要将此文件的实际值提交到版本控制
