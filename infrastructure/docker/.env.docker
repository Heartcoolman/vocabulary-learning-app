# ============================================
# Docker 部署环境变量配置
# 复制此文件为 .env 后使用
# ============================================

# ========== PostgreSQL 配置 ==========
POSTGRES_USER=danci
POSTGRES_PASSWORD=danci_secret_2024
POSTGRES_DB=vocabulary_db
POSTGRES_PORT=5432

# ========== Redis 配置 ==========
REDIS_PORT=6379

# ========== 后端配置 ==========
BACKEND_PORT=3000
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_64_chars_min
JWT_EXPIRES_IN=24h
CORS_ORIGIN=http://localhost:5173
LOG_LEVEL=info

# ========== 聚类任务配置（可选） ==========
ENABLE_CLUSTERING_WORKER=true
CLUSTERING_SCHEDULE="0 0 4 * * 0"
CLUSTERING_MIN_COVERAGE=0.5
CLUSTERING_KNN_K=5
CLUSTERING_DISTANCE_THRESHOLD=0.25

# ========== 前端配置 ==========
FRONTEND_PORT=5173

